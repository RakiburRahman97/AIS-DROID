<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileDisplayActivity"
    tools:showIn="@layout/app_bar_profile_display"
    android:background="#009688">

    <ImageView
        android:layout_width="143dp"
        android:layout_height="174dp"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:id="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        tools:layout_editor_absoluteY="34dp"
        tools:layout_editor_absoluteX="181dp"
        android:id="@+id/Name"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="206dp"
        android:layout_height="19dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_editor_absoluteY="115dp"
        tools:layout_editor_absoluteX="181dp"
        android:id="@+id/E-mail"
        android:textSize="14sp"/>
    <EditText
        android:layout_width="209dp"
        android:layout_height="18dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_editor_absoluteY="144dp" tools:layout_editor_absoluteX="181dp" android:id="@+id/editText3"/>
    <Button
        android:text="Preferences"
        android:layout_width="107dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="192dp"
        android:id="@+id/Preferences"
        android:textSize="12sp"/>
    <Button
        android:text="Edit"
        android:layout_width="88dp"
        android:layout_height="32dp"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="306dp"
        android:id="@+id/Edit"
        android:textSize="12sp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="270dp"
        tools:layout_editor_absoluteX="20dp"
        android:id="@+id/Menu"
        android:background="#008375"
        android:divider="@android:drawable/bottom_bar">

        <Button
            android:id="@+id/journey_Details1"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Journey Details"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:text="Contact List"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:id="@+id/Contact_List"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <Button
            android:text="Messages"
            android:layout_width="match_parent"
            android:layout_height="62dp" android:id="@+id/Messages" android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Event_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"

            android:textSize="36sp"
            android:textStyle="italic" />

        <Button
            android:text="Start Journey"
            android:layout_width="match_parent"
            android:layout_height="62dp" android:id="@+id/Start_Journey" android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="395dp"
        android:layout_height="7dp"
        android:background="#645F5F"
        tools:layout_editor_absoluteY="255dp" tools:layout_editor_absoluteX="8dp"/>

      <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>